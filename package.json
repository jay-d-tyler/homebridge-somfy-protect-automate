{
  "name": "@jay-d-tyler/homebridge-somfy-protect-automate",
  "displayName": "Somfy Protect Automate",
  "type": "module",
  "version": "1.0.5",
  "private": false,
  "description": "A Homebridge plugin that provides a stateless switch to disarm Somfy Protect alarms via automations",
  "author": "Jay Tyler",
  "license": "Apache-2.0",
  "homepage": "https://github.com/jay-d-tyler/homebridge-somfy-protect-automate#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jay-d-tyler/homebridge-somfy-protect-automate.git"
  },
  "bugs": {
    "url": "https://github.com/jay-d-tyler/homebridge-somfy-protect-automate/issues"
  },
  "keywords": [
    "homebridge-plugin",
    "somfy",
    "somfy protect",
    "security",
    "alarm",
    "automation",
    "homekit"
  ],
  "main": "dist/index.js",
  "files": [
    "dist",
    "config.schema.json",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": "^18.17.0 || ^20.9.0 || ^22.0.0",
    "homebridge": "^1.6.0 || ^2.0.0-beta.0"
  },
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "lint": "eslint . --max-warnings=0",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "verify-build": "test -d dist && test -f dist/index.js || (echo 'ERROR: dist folder not built! Run npm run build first.' && exit 1)",
    "prepublishOnly": "npm run lint && npm run build && npm run verify-build",
    "watch": "npm run build && npm link && nodemon"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "homebridge": "^2.0.0-beta.55",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "rimraf": "^6.1.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4"
  }
}
